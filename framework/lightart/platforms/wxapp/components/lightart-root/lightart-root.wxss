/*********** 组件 ***********/
.la-component{
    width: 100%;
    height: 100%;
    display: -webkit-flex;
    display: flex;
    background-size: cover;
    background-repeat: no-repeat;
    box-sizing: border-box;
    position: relative;
    -webkit-flex: none;
    flex: none;
}
.la-child{
    width: 100%;
    height: 100%;
}
.la-flow, .la-section_list{
    overflow: auto;
}
.la-block > .la-child, .la-countdown > .la-child{
    position: absolute;
}
.la-countdown .la-child{
    opacity: 0;
}
.la-is-countdown_ready .la-child{
    opacity: 1;
}
.la-label-el{
    width: 100%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.la-image-el{
    width: 100%;
    height: 100%;
}
.la-dir-horizontal{
    -webkit-flex-direction: row;
    flex-direction: row;
}
.la-dir-vertical{
    -webkit-flex-direction: column;
    flex-direction: column;
}
/** ======== */
.la-section{
    flex-wrap: wrap;
}
.la-section_list{
    -webkit-flex-direction: column;
    flex-direction: column;
}
.la-section-wrap{
    width: 100%;
    -webkit-flex-direction: row;
    flex-direction: row;
    justify-content: space-between;
}
.la-section-col-space{
    height: 100%;
    flex-grow: 0;
}
.la-section-col{
    flex-grow: 1;
}
.la-section-header{
    flex-basis: 100%;
}

