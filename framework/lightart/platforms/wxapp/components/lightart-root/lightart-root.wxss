    -webkit-justify-content: center;
    justify-content: center;
}
.la-s-als{
    -webkit-align-items: flex-start;
    align-items: flex-start;
}
.la-s-alc{
    -webkit-align-items: center;
    align-items: center;
}
.la-s-ale{
    -webkit-align-items: flex-end;
    align-items: flex-end;
}
.la-s-tas{
    text-align: left;
}
.la-s-tac{
