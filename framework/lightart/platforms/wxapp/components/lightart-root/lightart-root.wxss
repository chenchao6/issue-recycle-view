}
.la-s-tae{
    text-align: right;
}

/*********** 倒计时 ***********/
.la-ms-label-wrap{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: visible;
}
.la-ms-label-text{
    display: -webkit-flex;
    display: flex;
    position: absolute;
    text-align: center;
    left: 0;
    width: 100%;
    height: 100%;
}
.la-ms-label .la-label-el{
    opacity: 0;
}
.la-ms-label-0{top: 0;}
.la-ms-label-1{top: 100%;}
.la-ms-label-2{top: 200%;}
.la-ms-label-3{top: 300%;}
.la-ms-label-4{top: 400%;}
.la-ms-label-5{top: 500%;}
.la-ms-label-6{top: 600%;}
.la-ms-label-7{top: 700%;}
.la-ms-label-8{top: 800%;}
.la-ms-label-9{top: 900%;}
.la-ms-label-10{top: 1000%;}
.la-is-countdown_running .la-ms-label-wrap{
    -webkit-animation:run 1s infinite steps(1);
    animation:run 1s infinite steps(1);
}
@-webkit-keyframes run{
    0%{transform: translateY(0);}
    10%{transform: translateY(-100%);}
    20%{transform: translateY(-200%);}
    30%{transform: translateY(-300%);}
    40%{transform: translateY(-400%);}
    50%{transform: translateY(-500%);}
    60%{transform: translateY(-600%);}
    70%{transform: translateY(-700%);}
    80%{transform: translateY(-800%);}
    90%{transform: translateY(-900%);}
    100%{transform: translateY(-1000%);}
}
@keyframes run{
    0%{transform: translateY(0);}
    10%{transform: translateY(-100%);}
    20%{transform: translateY(-200%);}
    30%{transform: translateY(-300%);}
    40%{transform: translateY(-400%);}
    50%{transform: translateY(-500%);}
    60%{transform: translateY(-600%);}
    70%{transform: translateY(-700%);}
    80%{transform: translateY(-800%);}
    90%{transform: translateY(-900%);}
    100%{transform: translateY(-1000%);}
}
